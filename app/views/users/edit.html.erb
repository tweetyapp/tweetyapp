<h1>Edit user</h1>
<%= form_for(@user) do |f| %>
<%= render 'shared/error_messages', :object => f.object %>
	<%= render 'fields' , :f => f%>
	<div class="action">
		<%= f.submit "Update"%>
	</div>
<% end %>

<div>
	<%= gravatar_img @user %>
	<a href="http://gravatar.com/emails" target=_blank >change </a>
</div>
